<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Pollution Dashboard" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Region HBox.hgrow="ALWAYS" />

        <Label text="Visual Style:" textFill="#7f8c8d"/>
        <ComboBox fx:id="viewSelector" prefWidth="200.0" />
    </HBox>

    <HBox spacing="20.0">
        <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #fff0f0; -fx-background-radius: 5; -fx-border-color: #e74c3c; -fx-border-radius: 5; -fx-border-width: 0 0 0 3;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label text="HIGHEST AIR QUALITY" textFill="#7f8c8d">
                <font><Font name="System Bold" size="10.0" /></font>
            </Label>
            <Label fx:id="lblMaxAirCity" text="Loading..." textFill="#2c3e50">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <Label fx:id="lblMaxAirValue" text="0.0" textFill="#e74c3c">
                <font><Font size="24.0" /></font>
            </Label>
        </VBox>

        <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #f0f8ff; -fx-background-radius: 5; -fx-border-color: #3498db; -fx-border-radius: 5; -fx-border-width: 0 0 0 3;">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <Label text="HIGHEST WATER POLLUTION" textFill="#7f8c8d">
                <font><Font name="System Bold" size="10.0" /></font>
            </Label>
            <Label fx:id="lblMaxWaterCity" text="Loading..." textFill="#2c3e50">
                <font><Font name="System Bold" size="18.0" /></font>
            </Label>
            <Label fx:id="lblMaxWaterValue" text="0.0" textFill="#3498db">
                <font><Font size="24.0" /></font>
            </Label>
        </VBox>
    </HBox>

    <StackPane fx:id="chartContainer" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </StackPane>

</VBox>